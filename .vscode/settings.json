{
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--experimental",
    "--max-line-length", "80"
  ],
  "python.autoComplete.addBrackets": true,
  "python.analysis.completeFunctionParens": true,
  "python.pythonPath": "~/.local/share/virtualenvs/py-aws-sam-cdk-app-cJsps_cs/bin/python",
  "python.defaultInterpreterPath": "~/.local/share/virtualenvs/py-aws-sam-cdk-app-cJsps_cs/bin/python",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": ["source.fixAll"]
  },
  "restructuredtext.confPath": "",
  "restructuredtext.languageServer.disabled": false
}
